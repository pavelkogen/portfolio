"/syslog/*.collect.logs/*.log" {
        daily
        dateext
        dateyesterday
        missingok
        rotate 50
        compress
        notifempty
        sharedscripts
        postrotate
                /usr/bin/python /adm/logrotate/postrotate.py *.collect.logs 50
                /usr/bin/python /adm/logrotate/postrotate.py --.collect.logs 40
                /usr/bin/python /adm/logrotate/postrotate.py --.collect.logs 40
                /bin/kill -1 `cat /var/run/rsyslogd.pid` > /dev/null 2>&1
        endscript
}

